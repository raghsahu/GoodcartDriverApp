<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


<!--    <LinearLayout-->
<!--        android:id="@+id/dialog"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        >-->

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            app:cardCornerRadius="5dp"
            app:cardElevation="2dp"
            android:layout_margin="3dp"
            android:padding="5dp"
            >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/arrowdown"

                    >
                    <ImageView
                        android:id="@+id/iv_down_arrow"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        app:srcCompat="@drawable/ic_keyboard_arrow_down_black_24dp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        />

                    <LinearLayout
                        android:weightSum="1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                    <LinearLayout
                        android:layout_weight="0.3"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Order ID : "
                                android:textSize="14dp"/>

                            <TextView
                                android:id="@+id/tv_order_id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="#1125"
                                android:textSize="14dp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Assign date : "
                                android:textSize="14dp"/>

                            <TextView
                                android:id="@+id/tv_asign_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="11:45PM"
                                />

                        </LinearLayout>


                    </LinearLayout>

                        <LinearLayout
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_weight="0.7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >

                            <TextView
                                android:padding="@dimen/_7sdp"
                                android:background="@drawable/btn_bg_red"
                                android:id="@+id/tv_map_root"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Find root"
                                android:textSize="16dp"
                                android:textColor="@color/white"
                                android:layout_gravity="center"
                                android:textAlignment="center"
                                android:gravity="center"


                                />


                        </LinearLayout>



                 </LinearLayout>






                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#9EF1EB"
                            app:cardCornerRadius="5dp"
                            app:cardElevation="2dp"
                            android:layout_margin="3dp"
                            android:padding="5dp"
                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:background="#B2DCEFFD">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:weightSum="1">

                                    <LinearLayout
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:layout_weight=".4"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        >


                                            <de.hdodenhof.circleimageview.CircleImageView
                                                android:id="@+id/userimage"
                                                android:layout_width="70dp"
                                                android:layout_height="70dp"
                                                android:layout_gravity="center"

                                                android:padding="10dp"
                                                android:src="@drawable/user"
                                                app:civ_circle_background_color="@color/colorApp"
                                                app:civ_border_width="1dp"
                                                app:civ_border_color="@color/colorAccent" />

                                    </LinearLayout>


                                    <TextView
                                        android:id="@+id/tv_person_name"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Person name"
                                        android:textStyle="bold"
                                        android:layout_weight=".2"/>

                                    <LinearLayout
                                        android:layout_weight=".4"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        >

                                    <ImageView
                                        android:id="@+id/iv_call"
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:src="@drawable/callgreen"
                                        android:layout_weight=".2"/>

                                    </LinearLayout>

                                </LinearLayout>



                                <LinearLayout
                                    android:layout_margin="@dimen/_5sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    >

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Phone No: "/>

                                    <TextView
                                        android:id="@+id/tv_phone_number"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="1234567890"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_marginBottom="@dimen/_10sdp"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:layout_marginRight="@dimen/_5sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    >

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Address:-"/>

                                    <TextView
                                        android:id="@+id/tv_address"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="indore"/>
                                </LinearLayout>



                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:background="@color/colorApp"
                        android:weightSum="1"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight=".5"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Food Order "
                                android:textSize="18dp"
                                android:textColor="#fff"
                                android:paddingLeft="5dp"

                                />

                            <LinearLayout
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:paddingLeft="5dp"
                                    android:text="Total item: "
                                    android:textColor="#fff"
                                    android:textSize="14dp" />

                                <TextView
                                    android:id="@+id/tv_total_item"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="14dp"
                                    android:textColor="#fff"
                                    />
                            </LinearLayout>
                        </LinearLayout>



                        <LinearLayout
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight=".5"
                            android:padding="10dp">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₹ "
                                android:textColor="#fff"
                                android:textSize="18dp"


                                />
                            <TextView
                                android:id="@+id/tv_total_amount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#fff"
                                android:textSize="18dp"

                                />

                        </LinearLayout>




                    </LinearLayout>



                </LinearLayout>


        </androidx.cardview.widget.CardView>

<!--    </LinearLayout>-->


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        app:cardCornerRadius="4dp"
        android:layout_margin="3dp"
        >
        <LinearLayout
            android:id="@+id/homelinearlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:orientation="vertical"
            android:padding="3dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_margin="5dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight=".8"
                    android:layout_margin="3dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Order ID :"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:layout_gravity="left"
                        />

                    <TextView
                        android:id="@+id/orderid"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 0"
                        android:textSize="14dp"
                        android:layout_gravity="left"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight=".2"
                    >
                   <!-- <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sun ,"
                        android:textSize="14dp"
                        android:textColor="#222222"
                        android:layout_gravity="right"



                        />-->
                    <TextView
                        android:id="@+id/assigndate"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nov 3, 2019"
                        android:textSize="14dp"
                        android:textColor="#222222"
                        android:layout_gravity="right"
                        />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/userimage"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"

                        android:padding="10dp"
                        android:src="@drawable/user"
                        app:civ_circle_background_color="@color/colorApp"
                        app:civ_border_width="1dp"
                        app:civ_border_color="@color/colorAccent" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight=".85"
                    android:layout_margin="5dp"

                    >


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight=".9"
                        android:layout_margin="5dp"
                        >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight=".9"
                            android:layout_margin="5dp"
                            >

                        <TextView
                            android:id="@+id/firstname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Radhika "
                            android:textSize="16dp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:layout_marginLeft="1dp"
                            android:layout_gravity="left"
                            />
                        <TextView
                            android:id="@+id/lastname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sharma"
                            android:textSize="16dp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:layout_marginLeft="1dp"
                            android:layout_gravity="left"
                            />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <TextView
                                android:id="@+id/user_id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" (2345)"
                                android:textSize="14dp"

                                android:layout_marginLeft="1dp"

                                android:layout_gravity="left"
                                />


                        </LinearLayout>




                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight=".15"
                    android:layout_margin="5dp"


                    >
                    <LinearLayout
                        android:id="@+id/call"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/locbtn"
                        android:layout_margin="15dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="24dp"
                            app:srcCompat="@drawable/callgreen"
                            android:paddingTop="5dp"
                            android:layout_marginLeft="10dp"
                            />


                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:text="call"
                            android:textSize="14dp"
                            android:layout_gravity="right"
                            android:layout_marginRight="10dp"

                            android:padding="3dp"


                            />
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#B8B6B6"
                android:layout_marginTop="5dp">

            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight=".3"
                    android:layout_margin="5dp"
                    >
                    <TextView
                        android:id="@+id/address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="144,plasiaSquare \n Indore"
                        android:textSize="14dp"
                        android:textColor="#000"
                        android:layout_gravity="left"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight=".7"
                    android:padding="3dp"
                    android:background="@drawable/locbtn"

                    >

                    <LinearLayout
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:id="@+id/location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        >

                        <TextView
                            android:drawableLeft="@drawable/locgreen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="location"
                            android:textSize="14dp"
                            android:layout_gravity="center"
                            android:drawablePadding="5dp"

                            />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#B8B6B6"
                android:layout_marginTop="5dp">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight=".5"
                    android:layout_margin="3dp"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight=".9"
                        android:layout_margin="3dp"
                        >
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₹"
                            android:textSize="16dp"
                            android:textColor="@color/colorApp"
                            android:textStyle="bold"
                            android:layout_marginLeft="20dp"
                            android:layout_gravity="left"
                            />
                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="16dp"
                        android:textColor="@color/colorApp"
                        android:textStyle="bold"
                        android:layout_marginLeft="2dp"
                        android:layout_gravity="left"
                        />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="left"
                            android:layout_marginLeft="10dp"
                            android:text="No. of items : "
                            android:textColor="#1cb204"

                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/quantitiy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" 0"
                            android:textSize="14dp"
                            android:textColor="#1cb204"
                            android:layout_gravity="left"
                            />
                    </LinearLayout>




                </LinearLayout>

                <LinearLayout
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    >

                    <TextView
                        android:padding="@dimen/_5sdp"
                        android:background="@drawable/btn_bg_red"
                        android:id="@+id/orderdetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Order Details"
                        android:textSize="16dp"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:drawableRight="@drawable/ic_chevron_right_black_24dp"


                        />

                </LinearLayout>

            </LinearLayout>



        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
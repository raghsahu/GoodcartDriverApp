<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#f5f5f5"
    tools:context=".Fragment.ProfileFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_profileimage"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:padding="10dp"
                    android:src="@drawable/user"
                    app:civ_circle_background_color="@color/colorApp"
                    app:civ_border_width="1dp"
                    app:civ_border_color="@color/colorAccent"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"

                android:orientation="vertical">
             <androidx.cardview.widget.CardView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 app:cardBackgroundColor="#fff"
                 app:cardCornerRadius="10dp"
                 app:cardElevation="1dp"
                 android:layout_margin="5dp"
                 android:padding="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">




                <EditText
                    android:id="@+id/rest_name"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawablePadding="20dp"
                    android:paddingLeft="40dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:editable="false"
                    android:drawableLeft="@drawable/ic_person_black_24dp"

                    android:textColor="#000"
                    android:hint="Name"
                    android:textColorHint="@color/light_gray"
                    android:textSize="20dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:background="@color/light_gray" />

                <EditText
                    android:id="@+id/rest_phone"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawablePadding="20dp"
                    android:paddingLeft="40dp"
                    android:paddingTop="20dp"
                    android:drawableLeft="@drawable/ic_local_phone_black_24dp"
                    android:paddingBottom="20dp"
                    android:hint="Mobile"
                    android:editable="false"
                    android:textColorHint="@color/light_gray"
                    android:textColor="#000"


                    android:textSize="20dp"
                    tools:ignore="TextFields" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:background="@color/light_gray" />

                <EditText
                    android:id="@+id/rest_email"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawablePadding="20dp"
                    android:paddingLeft="40dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:drawableLeft="@drawable/ic_email_black_24dp"

                    android:textColor="#000"
                    android:editable="false"

                    android:hint="Email"
                    android:textColorHint="@color/light_gray"

                    android:textSize="20dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:background="@color/light_gray" />

                <EditText
                    android:id="@+id/rest_address"

                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawablePadding="20dp"
                    android:paddingLeft="40dp"
                    android:paddingTop="20dp"
                    android:drawableLeft="@drawable/ic_home_black_24dp"
                    android:hint="PostalAdress"
                    android:editable="false"
                    android:textColorHint="@color/light_gray"
                    android:paddingBottom="20dp"

                    android:textColor="#000"

                    android:textSize="20dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:background="@color/light_gray" />
                 <!--   <EditText
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:drawablePadding="20dp"
                        android:paddingLeft="40dp"
                        android:paddingTop="20dp"
                        android:drawableLeft="@drawable/loc"
                        android:paddingBottom="20dp"
                        android:text="Location"
                        android:textColor="@color/light_gray"
                        android:textSize="20dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:background="@color/light_gray" />
-->

                  <!--  <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:background="#504F4F" />-->
                </LinearLayout>
             </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"

                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

             <androidx.cardview.widget.CardView
                 android:layout_width="match_parent"
                 android:layout_height="40dp"
                 app:cardBackgroundColor="@color/colorApp"
                 app:cardCornerRadius="10dp"
                 app:cardElevation="1dp"
                 android:layout_margin="5dp"
                 android:padding="5dp">

                 <LinearLayout
                     android:id="@+id/update"

                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"

                     android:orientation="vertical"
                     android:layout_gravity="center">


                <TextView


                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"

                    android:text="Update"
                    android:textColor="#fff"
                    android:textSize="18dp"
                    android:textStyle="bold" />
                 </LinearLayout>

             </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_margin="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="#fff"

                    app:cardCornerRadius="10dp"
                    app:cardElevation="1dp"
                    android:layout_margin="1dp"
                    android:padding="5dp">
                    <LinearLayout
                        android:id="@+id/share"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"


                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:paddingLeft="30dp"

                     >


                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="    Share"
                            android:textColor="#000"
                            android:paddingLeft="100dp"
                            android:padding="10dp"


                            android:drawableLeft="@drawable/ic_share_black_24dp"

                            android:textSize="18dp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>


            <LinearLayout
                android:layout_margin="10dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    app:cardBackgroundColor="@color/colorApp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="1dp"
                    android:layout_margin="5dp"
                    android:padding="5dp">
                    <LinearLayout
                        android:id="@+id/logout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="vertical"
                        android:layout_gravity="center">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Logout"
                            android:textColor="#fff"

                            android:textSize="18dp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#f5f5f5">

            </LinearLayout>






        </LinearLayout>

    </ScrollView>
</LinearLayout>